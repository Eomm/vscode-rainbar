{
  "name": "vscode-rainbar",
  "displayName": "RainBar",
  "description": "Color your project's bars to find it when you open too many projects!",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "activationEvents": [
    "onCommand:vscode-rainbar.helloWorld",
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-rainbar.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "RainBar",
      "properties": {
        "rainbar.palette.hue": {
          "type": "string",
          "description": "Set your preferred color palette to use in the extension",
          "default": "green",
          "enum": [
            "aqua",
            "blue",
            "green",
            "orange",
            "red",
            "violet",
            "yellow"
          ]
        },
        "rainbar.usage.applayTo": {
          "type": "string",
          "description": "Apply the color palette to the following bars:",
          "default": "all",
          "enum": [
            "all",
            "title",
            "activity",
            "status"
          ]
        },
        "rainbar.usage.overwrite": {
          "type": "boolean",
          "scope": "application",
          "default": false,
          "description": "Overwrite the current workspace's color palette if present the next time you open a project"
        }
      }
    }
  },
  "scripts": {
    "lint": "standard --env mocha",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@vscode/test-electron": "^2.0.3",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "node-fetch": "^2.6.7",
    "standard": "^16.0.4",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eomm/vscode-rainbar.git"
  },
  "author": "Manuel Spigolon <behemoth89@gmail.com> (https://github.com/Eomm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Eomm/vscode-rainbar/issues"
  },
  "homepage": "https://github.com/Eomm/vscode-rainbar#readme",
  "keywords": [
    "bar color",
    "title bar color",
    "status bar color",
    "project",
    "project color",
    "settings"
  ],
  "dependencies": {
    "colord": "^2.9.2",
    "text-hex": "^1.0.0"
  }
}